{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "strict": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "lib": ["es2015", "dom"]
  },
  "include": ["./src/**/*.ts", "./src/**/*.json"],
  "exclude": ["./dist", "./node_modules", "*/**/__tests__"]
}
